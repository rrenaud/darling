    trainer.test_freq=25 \
    trainer.total_epochs=10 $@ +reward_model.custom_diversity_function.path=/home/$USER/darling/verl/verl/utils/reward_score/partition_reward_vllm_serve.py \
    +reward_model.custom_diversity_function.name=partition \
    +reward_model.multiplicative=True \
